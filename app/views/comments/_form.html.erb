    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :fullname, prompt: 'Select an user' %>
  </div>

  <div class="field">
    <%= form.label :post_id %>
    <%= form.collection_select :post_id, Post.all, :id, :headline, prompt: 'Select a post' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
